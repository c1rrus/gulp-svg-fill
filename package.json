{
  "name": "gulp-svg-fill",
  "version": "2.0.0",
  "description": "Gulp plugin that fills SVG files with a single color",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "gulp-svg-fill-illustration.svg"
  ],
  "scripts": {
    "commit": "git-cz",
    "clean": "del dist/*",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest --coverage",
    "lint": "eslint src --ext .js,.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/c1rrus/gulp-svg-fill.git"
  },
  "keywords": [
    "svg",
    "fill",
    "color",
    "icons",
    "sprite",
    "gulpplugin"
  ],
  "author": "James Nash (http://cirrus.twiddles.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/c1rrus/gulp-svg-fill/issues"
  },
  "homepage": "https://github.com/c1rrus/gulp-svg-fill#readme",
  "dependencies": {
    "@types/lodash.kebabcase": "^4.1.7",
    "@types/node": "^10.17.60",
    "@types/through2": "^2.0.34",
    "@types/vinyl": "^2.0.6",
    "lodash.kebabcase": "^4.1.1",
    "svg-fill": "^1.0.1",
    "through2": "^4.0.2",
    "vinyl": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@cyberfinity/tsconfig-node": "^1.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.1",
    "@types/color": "^3.0.3",
    "@types/jest": "^28.1.2",
    "@types/vinyl-fs": "^2.4.12",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "color": "^4.2.3",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^4.0.1",
    "eslint": "^8.18.0",
    "husky": "^7.0.4",
    "jest": "^28.1.1",
    "semantic-release": "^17.4.7",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4",
    "vinyl-fs": "^3.0.3"
  },
  "engines": {
    "node": ">= 12"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint",
      "pre-push": "npm run test"
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
